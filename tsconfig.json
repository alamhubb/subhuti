{
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "compilerOptions": {
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "module": "NodeNext",
    "target": "ES6",
    "rootDir": "./src",
    "outDir": "./lib",
    "baseUrl": ".",
    "strict": false,
    "lib": [
      "ES2020"
    ],
    "types": [
      "node"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "esModuleInterop": true
  }
}
