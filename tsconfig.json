{
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "Node",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "target": "ES2015",
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./lib",
    "strict": false,
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "lib": [
      "ES2015"
    ],
    "types": [
      "node"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  }
}
