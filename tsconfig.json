{
  "compilerOptions": {
    "module": "ES2022",
    "useDefineForClassFields": true,
    "moduleResolution": "Node",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "target": "ES2015",
    "strict": false,
    "allowJs": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "lib": [
      "ES2015"
    ],
    "types": [
      "node"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  }
}
